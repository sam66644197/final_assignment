@page
@model WebApplication2.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "登入";
}

<h1>登入</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">電子郵件</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">密碼</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="Input.RememberMe" class="form-check-input" />
        <label asp-for="Input.RememberMe" class="form-check-label">記住我</label>
    </div>
    <button type="submit" class="btn btn-primary">登入</button>
    <a class="btn btn-link" asp-page="/Account/Register">註冊</a>
    <a class="btn btn-link" asp-page="/Account/ForgotPassword">忘記密碼</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
