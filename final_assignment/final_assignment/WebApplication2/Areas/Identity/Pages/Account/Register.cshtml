@page
@model WebApplication2.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "註冊";
}

<h1>註冊</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">電子郵件</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">密碼</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">確認密碼</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">註冊</button>
    <a class="btn btn-link" asp-page="/Account/Login">已有帳號？登入</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
