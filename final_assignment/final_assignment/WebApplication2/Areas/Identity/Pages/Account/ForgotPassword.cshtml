@page
@model WebApplication2.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "忘記密碼";
}

<h1>忘記密碼</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">電子郵件</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">發送重設郵件</button>
    <a class="btn btn-link" asp-page="/Account/Login">返回登入</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
